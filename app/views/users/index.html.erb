<body class="post-login-body">
    <div class="user-index-wrapper">
        <div class="container">
          	<div class="row">
        	 	<div class="col-lg-3 user-info left-bar">
                    <div class="user-container">
                        <div class="user-title">
                          <h1>User Info</h1>
                        </div>
                        <% if @user.image_name %>
                        <div class="user-image">
                          <%= attachment_image_tag @user, :image_name, :fill, 150, 150, format: 'jpeg' %>
                        </div>
                        <% else %>
                        <div class="user-image">
                          <%= image_tag "/bookers_02_images/noimage_user.jpg",:size => "150x150"%>
                        </div>
                        <% end %>
                        <table class="table">
                          <tbody>
                            <tr></tr>
                            <tr class="user-name">
                                <th><h4>Name:</h4></th>
                                <th><%= @user.name %></th>
                            </tr>
                            <tr class="user-introduction">
                              <th><h4>Introduction:</h4></th>
                              <th><%= @user.introduction %></th>
                            </tr>
                          </tbody>
                        </table>
                        <% if @user.id == current_user.id %>
                            <%= link_to edit_user_path, class: "btn btn-default btn-block" do %>
                            <i class="glyphicon glyphicon-wrench">Edit</i>
                            <% end %>

                            <div class="posts-new">
                                <div class="user-title">
                                    <h1>Post New Books</h1>
                                </div>
                                <%= form_for(@post) do |f| %>
                                <div class="book-title">
                                    <h4>Title</h4>
                                    <%= f.text_field :title %>
                                </div>
                                <div class="book-about">
                                    <h4>Opinion</h4>
                                    <%= f.text_area :body %>
                                </div>
                                <%= button_tag :type => "submit", :class => "btn btn-default btn-block" do %>
                                <i class="glyphicon glyphicon-pencil">Post</i>
                                <% end %>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                </div>

        	    <div class="col-lg-9">
        	    	<div class="user-title">
        	          <h1>Users</h1>
        	        </div>
        			<table class="table table-striped">
        				<thead>
        					<tr>
        						<th>Image</th>
        						<th>Name</th>
                                <th></th>
        					</tr>
        				</thead>
        				<% @users.each do |user| %>
        				<tbody link="black">
        					<tr>
                                <% if user.image_name %>
        						<td><%= attachment_image_tag user, :image_name, :fill, 30, 30, format: 'jpeg' %></td>
                                <% else %>
                                <td><%= image_tag "/bookers_02_images/noimage_user.jpg",:size => "30x30"%></td>
                                <% end %>
        						<td><%= user.name %></td>
                                <div class="to-user-link">
        							<td><%= link_to "Show", user_path(user.id),:style=>"color:orange;" %></td>
        						</div>
        					</tr>
        				</tbody>
        				<% end %>
        			</table>
        	    </div>
          	</div>
        </div>
    </div>
</body>